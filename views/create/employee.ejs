<%-include("../partials/header.ejs")%>
    <!--container-->
    <div class="container">
      <a href="/customer">Views All Employees</a>
      <h1 class="text-center">Create Employee</h1>
      <div class="row justify-content-center">
        <div class="col-5">
          <!--form-->
          <form action="/employee" method="POST" id="form">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="employeeName"
                aria-describedby=""
              />
            </div>
            <div class="mb-3">
              <label for="address" class="form-label">Address</label>
              <input
                type="text"
                class="form-control"
                id="address"
                name="employeeAddr"
                min="0"
              />
            </div>
            <div class="mb-3">
              <label for="phone_number" class="form-label">Phone Number</label>
              <input
                type="tel"
                class="form-control"
                id="phone_number"
                name="employeePhone"
              />
            </div>
            <div class="mb-3">
              <label for="joined_date" class="form-label">Joined Date</label>
              <input
                type="date"
                class="form-control"
                id="joined_date"
                name="employeeJDate"
              />
            </div>
            <div class="mb-3">
              <label for="DOB" class="form-label">DOB</label>
              <input
                type="date"
                class="form-control"
                id="DOB"
                name="employeeDOB"
              />
            </div>
            <div class="mb-3">
              <label for="specialty" class="form-label">Specialty</label>
              <input
                type="text"
                class="form-control"
                id="specialty"
                name="employeeSpecialty"
              />
            </div>
            <button id="updateBtn" type="submit" class="btn btn-primary">
              Add
            </button>
            <button type="reset" id="hiddenBtn" class="btn btn-primary">
              Reset
            </button>
          </form>
          <!--/form-->
        </div>
      </div>
    </div>
    <!--/container-->
<%-include("../partials/footer.ejs")%>