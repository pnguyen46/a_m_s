<%-include("../partials/header.ejs")%>
<!--container-->
    <div class="container">
      <a href="/customer">Views All Customers</a>
      <h1 class="text-center">Create Customer</h1>
      <div class="row justify-content-center">
        <div class="col-5">
          <!--form-->
          <form action="/customer" method="POST" id="form">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="customerName"
              />
            </div>
            <div class="mb-3">
              <label for="address" class="form-label">Address</label>
              <input
                type="text"
                class="form-control"
                id="address"
                name="customerAddr"
              />
            </div>
            <div class="mb-3">
              <label for="phone_number" class="form-label">Phone Number</label>
              <input
                type="tel"
                class="form-control"
                id="phone_number"
                name="customerPhone"
              />
            </div>
            <div class="mb-3">
              <label for="joined_date" class="form-label">Joined Date</label>
              <input
                type="date"
                class="form-control"
                id="joined_date"
                name="joinedDate"
              />
            </div>
            <div class="mb-3">
              <label for="fav_tech" class="form-label">Perfer Technician</label>
              <!-- <input
                type="text"
                class="form-control"
                id="fav_tech"
                name="customerTech"
              /> -->
              <select name="customerTech" id="fav_tech">
                <option value="">None</option>
                <%employees.forEach(employee => {%>
                <option value="<%=employee._id%>"><%=employee.name%></option>
                <%})%>
              </select>
            </div>
            <div class="mb-3">
              <h3>Vehicle Information:</h3>
              <div id="vehicleContainer">
                <div class="col d-flex gap-2 mt-2 flex-wrap">
                  <label for="vehicleYear" class="form-label">Year:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 20%"
                  />
                  <label for="vehicleMake" class="form-label">Make:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 50%"
                  />
                  <label for="vehicleModel" class="form-label">Model:</label>
                  <input
                    type="text"
                    class="form-control w-50"
                    id="vehicles"
                    name="vehicle"
                  />
                  <label for="vehicleEngine" class="form-label">Engine:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 20%"
                  />
                  <label for="vehicleMileage" class="form-label"
                    >Mileage:</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 20%"
                  />
                  <label for="vehicleVIN" class="form-label">VIN number:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    step="0.01"
                    style="flex-basis: 40%"
                  />
                  <a class="btn btn-primary ms-auto deleteVBtn" type="button">
                    delete
                  </a>
                </div>
              </div>
            </div>
            <div class="my-3">
              <button class="btn btn-primary" type="button" id="newVBtn">
                Add New Vehicle
              </button>
            </div>
            <button id="updateBtn" type="submit" class="btn btn-primary">
              Add
            </button>
            <button id="hiddenBtn" type="reset" class="btn btn-primary">
              Reset
            </button>
          </form>
          <!--/form-->
        </div>
      </div>
    </div>
    <!--/container-->
<%-include("../partials/footer.ejs")%>

