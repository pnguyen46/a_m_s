<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title><%=title%></title>
  </head>
  <body>
    <!--container-->
    <!--nav-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="#">Home</a>
            <a class="nav-link" href="#">Features</a>
            <a class="nav-link" href="#">Pricing</a>
          </div>
        </div>
      </div>
    </nav>
    <!--/nav-->
    <div class="container">
      <h1 class="text-center">Customer</h1>
      <div class="row">
        <div class="col-3 border">
          <a
            class="btn btn-primary btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#itemForm"
            data-bs-type=""
            id="resetBtn"
            >Add Customer</a
          >
          <a class="btn btn-primary btn-sm">View All Customer</a>
        </div>

        <div class="col mt-2">
          <!--table-->
          <table class="table justify-content-end">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Joined Date</th>
                <th scope="col">Repairs</th>
                <th scope="col">Perfer Technician</th>
                <!-- <th scope="col" class="text-end">
                  <a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#customerForm">Add Customer</a>
                </th>
                <th scope="col" class="">
                  <a class="btn btn-primary btn-sm">View All Customer</a>
                </th> -->
              </tr>
            </thead>
            <tbody>
              <%customers.forEach((item,indx) => {%>
              <tr>
                <td><%=indx + 1%></td>
                <td><%=item.name%></td>
                <td><%=item.address%></td>
                <td><%=item.phone_number%></td>
                <td><%=item.joined_date%></td>
                <td><%=item.repair%></td>
                <td><%=item.fav_tech%></td>
                <td>
                  <button
                    type="submit"
                    class="btn btn-primary btn-sm editBtn"
                    data-bs-toggle="modal"
                    data-bs-target="#itemForm"
                    data-bs-id="<%=item._id%>"
                    data-bs-identifier="customer"
                    id="resetAddBtn"
                  >
                    Edit
                  </button>
                </td>
                <td>
                  <form
                    action="/customer/deleteItem/<%=item._id%>?_method=DELETE"
                    method="POST"
                  >
                    <button type="submit" class="btn btn-primary btn-sm">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!--modal-->
    <div class="modal" id="itemForm" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Customer</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!--form-->
            <form action="/customer" method="POST" id="form">
              <div class="mb-3">
                <label for="customerName" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="customerName"
                  name="customerName"
                  aria-describedby=""
                />
              </div>
              <div class="mb-3">
                <label for="customerAddr" class="form-label">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="customerAddr"
                  name="customerAddr"
                  min="0"
                />
              </div>
              <div class="mb-3">
                <label for="customerPhone" class="form-label"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  class="form-control"
                  id="customerPhone"
                  name="customerPhone"
                />
              </div>
              <div class="mb-3">
                <label for="customerRepair" class="form-label">Repairs</label>
                <input
                  type="text"
                  class="form-control"
                  id="customerRepair"
                  name="customerRepair"
                />
              </div>
              <div class="mb-3">
                <label for="customerTech" class="form-label"
                  >Perfer Technician</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="customerTech"
                  name="customerTech"
                />
              </div>
              <button type="submit" class="btn btn-primary">Add</button>
              <button id="hiddenBtn" type="reset" class="btn btn-primary">
                Reset
              </button>
            </form>
            <!--/form-->
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>
