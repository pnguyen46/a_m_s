<%-include("partials/header.ejs")%>
<!--container-->
    <div class="container">
      <h1 class="text-center">Employees</h1>
      <div class="row">
        <div class="col">
          <a href="employee/register" class="btn btn-primary">Add Employee</a>
        </div>
      </div>
      <div class="row">
        <div class="col mt-2">
          <!--table-->
          <table class="table border">
            <thead class="text-center">
              <tr class="">
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Curent Ticket</th>
                <th scope="col">Work History</th>
                <th scope="col">Specialty</th>
                <th scope="col">Class</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <%employees.forEach((item,indx) => {%>
              <tr class="text-center">
                <td><%=indx + 1%></td>
                <td><%=item.name%></td>
                <td><%=item.phone_number%></td>
                <td><%=item.currentTickets.length%></td>
                <td>
                  <a href="/employee/history/<%=item._id%>">View</a>
                </td>
                <td><%=item.specialty%></td>
                <td>
                  <%classes.forEach((rank,indx) => {%>
                      <%if(item.class === String(indx)){%>
                        <%=rank%>
                      <%}%>
                  <%})%>
                </td>
                <td>
                  <form action="/employee/<%=item._id%>?_method=PUT" method="POST">
                    <select name="employeeStatus" id="status">
                      <%status.forEach((stat,indx) => {%>
                        <%if(item.status === String(indx)){%>
                          <option value="<%=indx%>" selected><%=stat%></option>
                        <%}else{%>
                          <option value="<%=indx%>"><%=stat%></option>
                        <%}%>
                      <%})%>
                    </select>
                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                  </form>
                </td>
                <td>
                  <div class="d-flex justify-content-between">
                    <a
                      href="employee/<%=item._id%>/employee"
                      class="btn btn-primary btn-sm"
                      >View</a
                    >
                    <a
                      href="employee/edit/<%=item._id%>/employee"
                      class="btn btn-primary btn-sm"
                      >Update</a
                    >
                    <a
                      href="employee/deleteItem/<%=item._id%>?_method=DELETE"
                      class="btn btn-primary btn-sm"
                      >Delete</a
                    >
                  </div>
                </td>
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->
<%-include("partials/footer.ejs")%>

