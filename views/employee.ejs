<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title><%=title%></title>
  </head>
  <body>
    <!--container-->
    <!--nav-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="#">Home</a>
            <a class="nav-link" href="#">Features</a>
            <a class="nav-link" href="#">Pricing</a>
          </div>
        </div>
      </div>
    </nav>
    <!--/nav-->
    <div class="container">
      <h1 class="text-center">Employee</h1>
      <div class="row">
        <div class="col-3 border">
          <a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#employeeForm">Add Employee</a>
          <a class="btn btn-primary btn-sm" href="/employee">View All Employee</a>
        </div>
        <div class="col mt-2">
          <!--table-->
          <table class="table border">
            <thead>
              <tr class="">
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">DOB</th>
                <th scope="col">Address</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Repair</th>
                <th scope="col">Specialty</th>
                <th scope="col">Class</th>
                <th scope="col">Joined Date</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <%employees.forEach((item,indx) => {%>
                <tr>
                  <td><%=indx + 1%></td>
                  <td><%=item.name%></td>
                  <td></td>
                  <td><%=item.address%></td>
                  <td><%=item.phone_number%></td>
                  <td><%=item.repair%></td>
                  <td><%=item.specialty%></td>
                  <td><%=item.class%></td>
                  <td><%=item.joined_date%></td>
                  <td><%=item.status%></td>
                  <td>
                    <button type="submit" class="btn btn-primary btn-sm editBtn" data-bs-toggle="modal" data-bs-target="#employeeEditModal" data-bs-id="<%=item._id%>" data-bs-identifier="employee">Edit</button>
                  </td>
                  <td>
                    <form action="/employee/deleteItem/<%=item._id%>?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-primary btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <%})%>
            </tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!--Add modal-->
    <div class="modal" id="employeeForm" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Employee</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!--form-->
            <form action="/employee" method="POST">
              <div class="mb-3">
                <label for="employeeName" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="employeeName"
                  name="employeeName"
                  aria-describedby=""
                />
              </div>
              <div class="mb-3">
                <label for="employeeAddr" class="form-label">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="employeeAddr"
                  name="employeeAddr"
                  min="0"
                />
              </div>
              <div class="mb-3">
                <label for="employeePhone" class="form-label">Phone Number</label>
                <input
                  type="tel"
                  class="form-control"
                  id="employeePhone"
                  name="employeePhone"
                />
              </div>
              <div class="mb-3">
                <label for="employeeRepair" class="form-label">Repairs</label>
                <input
                  type="text"
                  class="form-control"
                  id="employeeRepair"
                  name="employeeRepair"
                />
              </div>
              <div class="mb-3">
                <label for="employeeSpecialty" class="form-label">Specialty</label>
                <input
                  type="text"
                  class="form-control"
                  id="employeeSpecialty"
                  name="employeeSpecialty"
                />
              </div>
              <div class="mb-3">
                <label for="employeeClass" class="form-label">Class</label>
                <input
                  type="text"
                  class="form-control"
                  id="employeeClass"
                  name="employeeClass"
                />
              </div>
              <div class="mb-3">
                <label for="employeeStatus" class="form-label">Status</label>
                <input
                  type="text"
                  class="form-control"
                  id="employeeStatus"
                  name="employeeStatus"
                />
              </div>
              <button type="submit" class="btn btn-primary">Add</button>
              <button type="reset" class="btn btn-primary">Reset</button>
            </form>
            <!--/form-->
          </div>
        </div>
      </div>
    </div>
    <!--/modal-->

    <!--Edit modal-->
    <div class="modal" id="employeeEditModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Employee</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!--form-->
            <form id="employeeEditForm" action="" method="POST">
              <div class="mb-3">
                <label for="editEmployeeName" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="editEmployeeName"
                  name="editEmployeeName"
                  aria-describedby=""
                  value=""
                />
              </div>
              <div class="mb-3">
                <label for="editEmployeeAddr" class="form-label">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="editEmployeeAddr"
                  name="editEmployeeAddr"
                  min="0"
                />
              </div>
              <div class="mb-3">
                <label for="editEmployeePhone" class="form-label">Phone Number</label>
                <input
                  type="number"
                  class="form-control"
                  id="editEmployeePhone"
                  name="editEmployeePhone"
                  min="0"
                />
              </div>
              <div class="mb-3">
                <label for="editEmployeeRepair" class="form-label">Repairs</label>
                <input
                  type="text"
                  class="form-control"
                  id="editEmployeeRepair"
                  name="editEmployeeRepair"
                />
              </div>
              <div class="mb-3">
                <label for="editEmployeeSpecialty" class="form-label">Specialty</label>
                <input
                  type="text"
                  class="form-control"
                  id="editEmployeeSpecialty"
                  name="editEmployeeSpecialty"
                />
              </div>
              <div class="mb-3">
                <label for="editEmployeeClass" class="form-label">Class</label>
                <input
                  type="text"
                  class="form-control"
                  id="editEmployeeClass"
                  name="editEmployeeClass"
                />
              </div>
              <div class="mb-3">
                <label for="editEmployeeStatus" class="form-label">Status</label>
                <input
                  type="text"
                  class="form-control"
                  id="editEmployeeStatus"
                  name="editEmployeeStatus"
                />
              </div>
              <button type="submit" class="btn btn-primary">Update</button>
            </form>
            <!--/form-->
          </div>
        </div>
      </div>
    </div>
    <!--/modal-->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>
