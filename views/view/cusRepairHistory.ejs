<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title><%=title%></title>
  </head>
  <body>
    <!--nav-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="#">Home</a>
            <a class="nav-link" href="#">Features</a>
            <a class="nav-link" href="#">Pricing</a>
          </div>
        </div>
      </div>
    </nav>
    <!--/nav-->
    <!--Active Container-->
    <div class="container">
      <h1 class="text-center"><%=cust.name%> Repair History</h1>
      <a href="/customer">Back to Customers</a>
      <div class="row mt-5">
        <h2 class="text-center">Current</h2>
        <div class="col">
          <!--table-->
          <table class="table">
            <thead class="text-center">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Repair Type</th>
                <th scope="col">Hours</th>
                <th scope="col">Cost</th>
                <th scope="col">Technician</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody class="text-center">
              <%cusTicket.forEach((tic,indx) => {%> <%if(!tic.closed){%>
              <tr>
                <td><%=indx + 1%></td>
                <td><%=tic.repairType%></td>
                <td><%=tic.hour%></td>
                <td><%=tic.cost%></td>
                <td>
                    <%employees.forEach(ele => {%>
                        <%if(String(ele._id) == tic.technician){%>
                            <%=ele.name%>
                        <%}%>
                    <%})%>
                </td>
                <td><%=tic.date%></td>
                <td>
                    <%status.forEach((ele,indx) => {%>
                        <%if(tic.status == String(indx)){%>
                          <%=ele%>
                        <%}%>
                      <%})%>
                </td>
                <td>
                  <a href="/ticket/<%=tic._id%>/customer">View</a>
                </td>
              </tr>
              <%}%> <%})%>
            </tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!--closed Container-->
    <div class="container mt-5">
      <div class="row">
        <h2 class="text-center">Past</h2>
        <div class="col">
          <!--table-->
          <table class="table">
            <thead class="text-center">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Repair Type</th>
                <th scope="col">Hours</th>
                <th scope="col">Cost</th>
                <th scope="col">Technician</th>
                <th scope="col">Date</th>
                <th scope="col">Ticket</th>
              </tr>
            </thead>
            <tbody class="text-center">
              <%cusTicket.forEach((tic,indx) => {%> <%if(tic.closed &&
              tic.status === '3'){%>
              <tr>
                <td><%=indx + 1%></td>
                <td><%=tic.repairType%></td>
                <td><%=tic.hour%></td>
                <td><%=tic.cost%></td>
                <td>
                    <%employees.forEach(ele => {%>
                        <%if(String(ele._id) == tic.technician){%>
                            <%=ele.name%>
                        <%}%>
                    <%})%>    
                </td>
                <td><%=tic.date%></td>
                <td>
                    <a href="/ticket/closedTicket/<%=tic._id%>/customer">View</a>
                </td>
              </tr>
              <%}%> <%})%>
            </tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>
