<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title><%=title%></title>
  </head>
  <body>
    <!--container-->
    <!--nav-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="#">Home</a>
            <a class="nav-link" href="#">Features</a>
            <a class="nav-link" href="#">Pricing</a>
          </div>
        </div>
      </div>
    </nav>
    <!--/nav-->
    <div class="container">
      <a href="/ticket">View All Tickets</a>
      <h1 class="text-center">View Closed Ticket</h1>
      <div class="row justify-content-center">
        <div class="col-5">
          <!--form-->
          <form action="/ticket" method="POST" id="form">
            <div class="mb-3">
              <label for="repairType" class="form-label">Repair Type</label>
              <input
                type="text"
                class="form-control"
                id="repairType"
                name="repairType"
                aria-describedby=""
                value="<%=objTic.repairType%>"
                disabled
              />
            </div>
            <div class="mb-3">
              <label for="hour" class="form-label">Hours</label>
              <input
                type="number"
                class="form-control"
                id="hour"
                name="repairHours"
                min="0"
                step="0.10"
                value="<%=objTic.hour%>"
                disabled
              />
            </div>
            <div class="mb-3">
              <label for="cost" class="form-label">Cost</label>
              <input
                type="number"
                class="form-control"
                id="cost"
                name="repairCost"
                min="0"
                step="0.01"
                value="<%=objTic.cost%>"
                disabled
              />
            </div>
            <div class="mb-3">
              <label for="repairDate" class="form-label">Date</label>
              <input
                type="date"
                class="form-control"
                id="date"
                name="repairDate"
                value="<%=objTic.date%>"
                disabled
              />
            </div>
            <div class="mb-3">
              <label for="technician" class="form-label"><h3>Technician:</h3></label>
              <select name="repairTech" id="technician" disabled>
                <%employees.forEach(el => {%>
                  <%if(String(el._id) == objTic.technician){%>
                    <option value="<%=el._id%>" selected><%=el.name%></option>
                  <%}else{%>
                    <option value="<%=el._id%>"><%=el.name%></option>
                  <%}%>
                <%})%>
              </select>
            </div>
            <div class="mb-3">
              <label for="status" class="form-label">Status</label>
              <%status.forEach((stat,indx) => {%>
                  <%if(objTic.status == indx){%>
                    <input
                    type="text"
                    class="form-control"
                    id="status"
                    name="repairStatus"
                    value="<%=stat%>"
                    disabled
                  />
                  <%}%>
              <%})%>
            </div>
            <div class="mb-3">
              <h3>Customer Information</h3>
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="customerName"
                  aria-describedby=""
                  value="<%=ticCustomer.name%>"
                  disabled
                />
              </div>
              <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="address"
                  name="customerAddr"
                  min="0"
                  value="<%=ticCustomer.address%>"
                  disabled
                />
              </div>
              <div class="mb-3">
                <label for="phone_number" class="form-label"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  class="form-control"
                  id="phone_number"
                  name="customerPhone"
                  value="<%=ticCustomer.phone_number%>"
                  disabled
                />
              </div>
            </div>
            <div class="mb-3">
              <h3>Vehicle Information:</h3>
              <div id="vehicleContainer">
                <%vehicles.forEach(el => {%>
                <div class="col d-flex gap-2 mt-2 flex-wrap">
                  <input
                    type="text"
                    name="vehicle"
                    value="<%=el._id%>"
                    hidden
                  />
                  <label for="vehicleYear" class="form-label">Year:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 20%"
                    value="<%=el.vehicleYear%>"
                    disabled
                  />
                  <label for="vehicleMake" class="form-label">Make:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 50%"
                    value="<%=el.vehicleMake%>"
                    disabled
                  />
                  <label for="vehicleModel" class="form-label">Model:</label>
                  <input
                    type="text"
                    class="form-control w-50"
                    id="vehicles"
                    name="vehicle"
                    value="<%=el.vehicleModel%>"
                    disabled
                  />
                  <label for="vehicleEngine" class="form-label">Engine:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 20%"
                    value="<%=el.vehicleEngine%>"
                    disabled
                  />
                  <label for="vehicleMileage" class="form-label"
                    >Mileage:</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 20%"
                    value="<%=el.vehicleMileage%>"
                    disabled
                  />
                  <label for="vehicleVIN" class="form-label">VIN number:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="vehicles"
                    name="vehicle"
                    style="flex-basis: 40%"
                    value="<%=el.vehicleVIN%>"
                    disabled
                  />
                </div>
                <%})%>
              </div>
            </div>
            <div class="mb-3">
              <label for="parts" class="form-label"><h3>Parts</h3></label>
              <div id="partContainer">
                <%if(parts){%>
                  <%parts.forEach(part => {%>
                    <div class="d-flex gap-2 my-2">
                      <input
                        type="text"
                        placeholder="Name"
                        class="form-control w-75"
                        id="parts"
                        name="repairParts"
                        value="<%=part[0]%>"
                        disabled
                      />
                      <input
                        type="number"
                        placeholder="Qty"
                        class="form-control w-25"
                        id="parts"
                        name="repairParts"
                        value="<%=part[1]%>"
                        disabled
                      />
                    </div>
                  <%})%>
                <%}%>  
              </div>
            </div>
            <a type="button" class="btn btn-primary" href="/ticket/openTicket/<%=objTic._id%>">
              Open
            </a>
          </form>
          <!--/form-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>
