<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title><%=title%></title>
  </head>
  <body>
    <!--container-->
    <!--nav-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="#">Home</a>
            <a class="nav-link" href="#">Features</a>
            <a class="nav-link" href="#">Pricing</a>
          </div>
        </div>
      </div>
    </nav>
    <!--/nav-->
    <div class="container">
      <h1 class="text-center">Update Ticket</h1>
      <div class="row justify-content-center">
        <div class="col-5">
          <!--form-->
          <form action="/ticket/editItem/<%=ticketId%>?_method=PUT" method="POST" id="form">
            <div class="mb-3">
              <label for="repairType" class="form-label">Repair Type</label>
              <input
                type="text"
                class="form-control"
                id="repairType"
                name="repairType"
                aria-describedby=""
                value="<%=tickets.repairType%>"
              />
            </div>
            <div class="mb-3">
              <label for="hour" class="form-label">Hours</label>
              <input
                type="number"
                class="form-control"
                id="hour"
                name="repairHours"
                min="0"
                step="0.10"
                value="<%=tickets.hour%>"
              />
            </div>
            <div class="mb-3">
              <label for="cost" class="form-label">Cost</label>
              <input
                type="number"
                class="form-control"
                id="cost"
                name="repairCost"
                min="0"
                step="0.01"
                value="<%=tickets.cost%>"
              />
            </div>
            <div class="mb-3">
              <label for="repairDate" class="form-label">Date</label>
              <input
                type="date"
                class="form-control"
                id="date"
                name="repairDate"
                value="<%=tickets.date%>"
              />
            </div>
            <div class="mb-3 d-flex justify-content-between">
              <div>
                <label for="technician" class="form-label"><h3>Technician:</h3></label>
                <select name="repairTech" id="technician">
                  <option value="">None</option>
                  <%employees.forEach(employee =>{%>
                    <%if(String(employee._id) == tickets.technician){%>
                      <option value="<%=employee._id%>" selected><%=employee.name%></option>
                    <%}else{%>
                      <option value="<%=employee._id%>"><%=employee.name%></option>
                    <%}%>
                  <%})%>
                </select>
              </div>
              <div>
                <label for="repairStatus"><h3>Status:</h3></label>
                <select name="repairStatus" id="statusOption">
                  <%status.forEach((ele,indx) => {%>
                    <%if(tickets.status == String(indx)){%>
                      <option value="<%=indx%>"selected><%=ele%></option>
                    <%}else{%>
                      <option value="<%=indx%>"><%=ele%></option>
                    <%}%>
                  <%})%>
                </select>
              </div>

            </div>
            <div class="mb-3">
              <h3>Customer Information</h3>
              <div class="mb-3">
                <input type="text" name="customerId" id="customerId" value="<%=ticCustomer._id%>" hidden>
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="customerName"
                  aria-describedby=""
                  value="<%=ticCustomer.name%>"
                />
              </div>
              <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="address"
                  name="customerAddr"
                  min="0"
                  value="<%=ticCustomer.address%>"
                />
              </div>
              <div class="mb-3">
                <label for="phone_number" class="form-label"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  class="form-control"
                  id="phone_number"
                  name="customerPhone"
                  value="<%=ticCustomer.phone_number%>"
                />
              </div>
            </div>
            <div class="mb-3">
              <h3>Vehicle Information</h3>
              <div id="vehicleContainer">
                <%vehicles.forEach(vehicle => {%>
                    <div class="col d-flex gap-2 mt-2 flex-wrap edit">
                      <input type="text" name="vehicle" id="vehicleId" value="<%=vehicle._id%>" hidden>
                      <label for="vehicleYear" class="form-label">Year:</label>
                      <input
                        type="text"
                        class="form-control"
                        id="vehicles"
                        name="vehicle"
                        style="flex-basis: 20%"
                        value="<%=vehicle.vehicleYear%>"
                      />
                      <label for="vehicleMake" class="form-label">Make:</label>
                      <input
                        type="text"
                        class="form-control"
                        id="vehicles"
                        name="vehicle"
                        style="flex-basis: 50%"
                        value="<%=vehicle.vehicleMake%>"
                      />
                      <label for="vehicleModel" class="form-label">Model:</label>
                      <input
                        type="text"
                        class="form-control w-50"
                        id="vehicles"
                        name="vehicle"
                        value="<%=vehicle.vehicleModel%>"
                      />
                      <label for="vehicleEngine" class="form-label">Engine:</label>
                      <input
                        type="text"
                        class="form-control"
                        id="vehicles"
                        name="vehicle"
                        style="flex-basis: 20%"
                        value="<%=vehicle.vehicleEngine%>"
                      />
                      <label for="vehicleMileage" class="form-label"
                        >Mileage:</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="vehicles"
                        name="vehicle"
                        style="flex-basis: 20%"
                        value="<%=vehicle.vehicleMileage%>"
                      />
                      <label for="vehicleVIN" class="form-label">VIN number:</label>
                      <input
                        type="text"
                        class="form-control"
                        id="vehicles"
                        name="vehicle"
                        style="flex-basis: 40%"
                        value="<%=vehicle.vehicleVIN%>"
                      />
                    </div>
                <%})%>
              </div>
            </div>
            <div class="mb-3">
              <label for="parts" class="form-label"><h3>Parts</h3></label>
              <div id="partContainer">
                <%parts.forEach(part => {%>
                    <div class="d-flex gap-2 my-2">
                      <input
                        type="text"
                        placeholder="Name"
                        class="form-control w-75"
                        id="parts"
                        name="repairParts"
                        value="<%=part[0]%>"
                      />
                      <input
                        type="number"
                        placeholder="Qty"
                        class="form-control w-25"
                        id="parts"
                        name="repairParts"
                        value="<%=part[1]%>"
                      />
                      <button
                      class="btn btn-primary btn-sm ms-1 deleteInputBox"
                      type="button"
                      >
                      Delete
                      </button>
                    </div>
                <%})%>
              </div>
              <div class="d-flex justify-content-end mt-3">
                <button
                  class="btn btn-primary btn-sm"
                  id="addInputBox"
                  type="button"
                >
                  Add Part
                </button>
              </div>
            </div>
            <button type="submit" id="updateBtn" class="btn btn-primary">Update</button>
            <button type="reset" id="hiddenBtn" class="btn btn-primary">
              Reset
            </button>
            <%if(location === 'customer'){%>
              <a type="button" class="btn btn-danger" href="/ticket/<%=ticketId%>/customer">Cancel</a>
            <%}else if(location === 'employee'){%>
              <a type="button" class="btn btn-danger" href="/ticket/<%=ticketId%>/employee">Cancel</a>
            <%}else{%>
              <a type="button" class="btn btn-danger" href="/ticket/<%=ticketId%>/ticket">Cancel</a>
            <%}%>
          </form>
          <!--/form-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>