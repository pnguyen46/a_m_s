<%-include("../partials/header.ejs")%>
<!--container-->
  <div class="container">
    <h1 class="text-center">Update Employee</h1>
    <div class="row justify-content-center">
      <div class="col-5">
        <!--form-->
        <form
          action="/employee/editItem/<%=employ._id%>?_method=PUT"
          method="POST"
          id="form"
        >
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="employeeName"
              aria-describedby=""
              value="<%=employ.name%>"
            />
          </div>
          <div class="mb-3 d-flex justify-content-between">
            <div>
              <label for="class" class="form-label">Class</label>
              <select name="employeeClass" id="rank">
                <%classes.forEach((rank,indx) => {%>
                    <%if(employ.class === String(indx)){%>
                      <option value="<%=indx%>" selected><%=rank%></option>
                    <%}else{%>
                      <option value="<%=indx%>"><%=rank%></option>
                    <%}%>
                <%})%>
              </select>
            </div>
            <div>
              <label for="status" class="form-label">Status</label>
              <select name="employeeStatus" id="status">
                <%status.forEach((stat,indx) => {%>
                  <%if(employ.status === String(indx)){%>
                    <option value="<%=indx%>" selected><%=stat%></option>
                  <%}else{%>
                    <option value="<%=indx%>"><%=stat%></option>
                  <%}%>
                <%})%>
              </select>
            </div>
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input
              type="text"
              class="form-control"
              id="address"
              name="employeeAddr"
              value="<%=employ.address%>"
            />
          </div>
          <div class="mb-3">
            <label for="phone_number" class="form-label">Phone Number</label>
            <input
              type="tel"
              class="form-control"
              id="phone_number"
              name="employeePhone"
              value="<%=employ.phone_number%>"
            />
          </div>
          <div class="mb-3">
            <label for="DOB" class="form-label">DOB</label>
            <input
              type="date"
              class="form-control"
              id="DOB"
              name="employeeDOB"
              value="<%=employ.DOB%>"
            />
          </div>
          <div class="mb-3">
            <label for="joined_date" class="form-label">Joined Date</label>
            <input
              type="date"
              class="form-control"
              id="joined_date"
              name="employeeJDate"
              value="<%=employ.joined_date%>"
            />
          </div>
          <div class="mb-3">
            <label for="specialty" class="form-label">Specialty</label>
            <input
              type="text"
              class="form-control"
              id="specialty"
              name="employeeSpecialty"
              value="<%=employ.specialty%>"
            />
          </div>
          <button id="updateBtn" class="btn btn-primary" type="submit">
            Update
          </button>
          <a id="resetBtn" class="btn btn-primary" type="reset">Reset</a>
          <%if(location === "ticket"){%>
            <a
              href="/employee/<%=employ._id%>/ticket"
              type="button"
              class="btn btn-danger"
              >Cancel</a>
          <%}else if(location === "employee"){%>
            <a
            href="/employee/<%=employ._id%>/employee"
            type="button"
            class="btn btn-danger"
            >Cancel</a>
          <%}else{%>
            <a
            href="/employee/<%=employ._id%>/<%=location%>"
            type="button"
            class="btn btn-danger"
            >Cancel</a>
          <%}%>
        </form>
        <!--/form-->
      </div>
    </div>
  </div>
<!--/container-->
<%-include("../partials/footer.ejs")%>
