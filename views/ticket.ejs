<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title><%=title%></title>
  </head>
  <body>
    <!--nav-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="#">Home</a>
            <a class="nav-link" href="#">Features</a>
            <a class="nav-link" href="#">Pricing</a>
          </div>
        </div>
      </div>
    </nav>
    <!--/nav-->
    <!--Active Container-->
    <div class="container">
      <h1 class="text-center">Ticket</h1>
      <div class="row mt-5">

        <h2 class="text-center">Active Ticket</h2>
        <div class="col-3 border">
          <a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#ticketForm">Create Ticket</a>
          <a class="btn btn-primary btn-sm">View All Tickets</a>
        </div>
      
        <div class="col">
          <!--table-->
          <table class="table">
            <thead>
              <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Repair Type</th>
                <th scope="col">Hours</th>
                <th scope="col">Parts</th>
                <th scope="col">Cost</th>
                <th scope="col">Date</th>
                <th scope="col">Technician</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody class="text-center">
              <%tickets.forEach((item,indx) => {%>
                <tr>
                  <td><%=indx + 1%></td>
                  <td><%=item.repairType%></td>
                  <td><%=item.hour%></td>
                  <td></td>
                  <td><%=item.cost%></td>
                  <td><%=new Date(item.date).toDateString()%></td>
                  <td><%=item.technician%></td>
                  <td><%=item.status%></td>
                  <td>
                    <button type="submit" class="btn btn-primary btn-sm editBtn" data-bs-toggle="modal" data-bs-target="#repairEditModal" data-bs-id="<%=item._id%>" data-bs-identifier="ticket">Edit</button>
                  </td>
                  <td>
                    <form action="/ticket/deleteItem/<%=item._id%>?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-primary btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <%})%>
            </tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!--closed Container-->
    <div class="container mt-5">
      <div class="row">
        <h2 class="text-center">Closed Ticket</h2>
        <div class="col-3 border order-1 mt-1">
          <a class="btn btn-primary btn-sm">View All Tickets</a>
        </div>
      
        <div class="col">
          <!--table-->
          <table class="table">
            <thead>
              <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">Repair Type</th>
                <th scope="col">Hours</th>
                <th scope="col">Cost</th>
                <th scope="col">Technician</th>
                <th scope="col">Date</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!--modal-->
    <div class="modal" id="ticketForm" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Create Ticket</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!--form-->
            <form action="/ticket" method="POST">
              <div class="mb-3">
                <label for="repairType" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairType"
                  name="repairType"
                  aria-describedby=""
                />
              </div>
              <div class="mb-3">
                <label for="repairHours" class="form-label">Hours</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairHours"
                  name="repairHours"
                  min="0"
                />
              </div>
              <div class="mb-3">
                <label for="repairParts" class="form-label">Parts</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairParts"
                  name="repairParts"
                />
              </div>
              <div class="mb-3">
                <label for="repairCost" class="form-label">Cost</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairCost"
                  name="repairCost"
                  min="0"
                />
              </div>
              <div class="mb-3">
                <label for="repairDate" class="form-label">Date</label>
                <input
                  type="datetime"
                  class="form-control"
                  id="repairDate"
                  name="repairDate"
                />
              </div>
              <div class="mb-3">
                <label for="repairTech" class="form-label">Technician</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairTech"
                  name="repairTech"
                />
              </div>
              <div class="mb-3">
                <label for="repairStatus" class="form-label">Status</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairStatus"
                  name="repairStatus"
                />
              </div>
              <button type="submit" class="btn btn-primary">Add</button>
              <button type="reset" class="btn btn-primary">Reset</button>
            </form>
            <!--/form-->
          </div>
        </div>
      </div>
    </div>
    <!--/modal-->

    <!--modal-->
    <div class="modal" id="repairEditModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Customer</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!--form-->
            <form id="repairEditForm" action="" method="POST">
              <div class="mb-3">
                <label for="repairEditType" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairEditType"
                  name="repairEditType"
                  aria-describedby=""
                  value=""
                />
              </div>
              <div class="mb-3">
                <label for="repairEditHrs" class="form-label">Hours</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairEditHrs"
                  name="repairEditHrs"
                />
              </div>
              <div class="mb-3">
                <label for="repairEditParts" class="form-label">Parts</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairEditParts"
                  name="repairEditParts"
                />
              </div>
              <div class="mb-3">
                <label for="repairEditCost" class="form-label">Cost</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairEditCost"
                  name="repairEditCost"
                />
              </div>
              <div class="mb-3">
                <label for="repairEditDate" class="form-label">Date</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairEditDate"
                  name="repairEditDate"
                />
              </div>
              <div class="mb-3">
                <label for="repairEditTech" class="form-label">Technician</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairEditTech"
                  name="repairEditTech"
                />
              </div>
              <div class="mb-3">
                <label for="repairEditStatus" class="form-label">Status</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairEditStatus"
                  name="repairEditStatus"
                />
              </div>
              <button type="submit" class="btn btn-primary">Update</button>
            </form>
            <!--/form-->
          </div>
        </div>
      </div>
    </div>
    <!--/modal-->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>
