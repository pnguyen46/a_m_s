<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title><%=title%></title>
  </head>
  <body>
    <!--nav-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="#">Home</a>
            <a class="nav-link" href="#">Features</a>
            <a class="nav-link" href="#">Pricing</a>
          </div>
        </div>
      </div>
    </nav>
    <!--/nav-->
    <!--Active Container-->
    <div class="container">
      <h1 class="text-center">Ticket</h1>
      <div class="row mt-5">
        <h2 class="text-center">Active Ticket</h2>
        <div class="col-3 border">
          <a
            class="btn btn-primary btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#itemForm"
            data-bs-type="edit"
            data-bs-identifier="ticket"
            id="resetBtn"
            >Create Ticket</a
          >
          <a class="btn btn-primary btn-sm">View All Tickets</a>
        </div>

        <div class="col">
          <!--table-->
          <table class="table">
            <thead>
              <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Repair Type</th>
                <th scope="col">Hours</th>
                <th scope="col">Parts</th>
                <th scope="col">Cost</th>
                <th scope="col">Date</th>
                <th scope="col">Technician</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody class="text-center">
              <%tickets.forEach((item,indx) => {%>
              <tr>
                <td><%=indx + 1%></td>
                <td><%=item.repairType%></td>
                <td><%=item.hour%></td>
                <td>
                  <ul class="list-unstyled">
                    <%item.parts.forEach(el => {%>
                        <li><%=el%></li>
                    <%})%>
                  </ul>
                </td>
                <td><%=item.cost%></td>
                <td><%=item.date%></td>
                <td><%=item.technician%></td>
                <td><%=item.status%></td>
                <td>
                  <button
                    type="submit"
                    class="btn btn-primary btn-sm editBtn resetAddBtn"
                    data-bs-toggle="modal"
                    data-bs-target="#itemForm"
                    data-bs-id="<%=item._id%>"
                    data-bs-identifier="ticket"
                  >
                    Edit
                  </button>
                </td>
                <td>
                  <form
                    action="/ticket/deleteItem/<%=item._id%>?_method=DELETE"
                    method="POST"
                  >
                    <button type="submit" class="btn btn-primary btn-sm">
                      Delete
                    </button>
                  </form>
                </td>
                <td>
                  <form
                    action="/ticket/closeTicket/<%=item._id%>?_method=PUT"
                    method="POST"
                  >
                    <button type="submit" class="btn btn-primary btn-sm">
                      Close
                    </button>
                  </form>
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!--closed Container-->
    <div class="container mt-5">
      <div class="row">
        <h2 class="text-center">Closed Ticket</h2>
        <div class="col-3 border order-1 mt-1">
          <a class="btn btn-primary btn-sm">View All Tickets</a>
        </div>

        <div class="col">
          <!--table-->
          <table class="table">
            <thead>
              <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">Repair Type</th>
                <th scope="col">Hours</th>
                <th scope="col">Cost</th>
                <th scope="col">Technician</th>
                <th scope="col">Date</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
          <!--/table-->
        </div>
      </div>
    </div>
    <!--/container-->

    <!--modal-->
    <div class="modal" id="itemForm" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Create Ticket</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!--form-->
            <form action="/ticket" method="POST" id="form">
              <div class="mb-3">
                <label for="repairType" class="form-label">Repair Type</label>
                <input
                  type="text"
                  class="form-control"
                  id="repairType"
                  name="repairType"
                  aria-describedby=""
                />
              </div>
              <div class="mb-3">
                <label for="hour" class="form-label">Hours</label>
                <input
                  type="number"
                  class="form-control"
                  id="hour"
                  name="repairHours"
                  min="0"
                  step="0.10"
                />
              </div>
              <div class="mb-3">
                <label for="cost" class="form-label">Cost</label>
                <input
                  type="number"
                  class="form-control"
                  id="cost"
                  name="repairCost"
                  min="0"
                  step="0.01"
                />
              </div>
              <div class="mb-3">
                <label for="repairDate" class="form-label">Date</label>
                <input
                  type="date"
                  class="form-control"
                  id="date"
                  name="repairDate"
                />
              </div>
              <div class="mb-3">
                <label for="technician" class="form-label">Technician</label>
                <input
                  type="text"
                  class="form-control"
                  id="technician"
                  name="repairTech"
                />
              </div>
              <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <input
                  type="text"
                  class="form-control"
                  id="status"
                  name="repairStatus"
                />
              </div>
              <div class="mb-3">
                <label for="parts" class="form-label">Parts</label>
                <div id="partContainer">
                  <div class="d-flex">
                    <input
                      type="text"
                      class="form-control w-75"
                      id="parts"
                      name="repairParts"
                    />
                    <input
                      type="number"
                      class="form-control w-25"
                      id="parts"
                      name="repairParts"
                    />
                  </div>
                </div>
                <div class="d-flex justify-content-end mt-3">
                  <button
                    class="btn btn-primary btn-sm"
                    id="addInputBox"
                    type="button"
                  >
                    Add Part
                  </button>
                  <button
                    class="btn btn-primary btn-sm ms-1"
                    id="deleteInputBox"
                    type="button"
                  >
                    Delete Part
                  </button>
                </div>
              </div>
              <button type="submit" id="updateBtn" class="btn btn-primary">Add</button>
              <button type="reset" id="hiddenBtn" class="btn btn-primary">
                Reset
              </button>
            </form>
            <!--/form-->
          </div>
        </div>
      </div>
    </div>
    <!--/modal-->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

    <!-- Option 2: Separate Popper and Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>
